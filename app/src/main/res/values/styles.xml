<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ChatItemDate">
        <item name="android:textColor">@color/date</item>
    </style>

    <style name="ChatItemUsername">
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
    </style>

    <style name="ChatItemText">
        <item name="android:textColor">@color/text</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="ChatItemImage">
        <item name="android:maxWidth">@dimen/chat_item_image_height</item>
        <item name="android:maxHeight">@dimen/chat_item_image_height</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>