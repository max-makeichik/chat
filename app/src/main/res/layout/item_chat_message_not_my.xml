<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="@dimen/chat_item_margin"
    android:layout_marginStart="@dimen/chat_item_margin"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/chat_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bubble_message"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chat_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/chat_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>