<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linear"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bubble_message"
    android:gravity="right"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="@dimen/chat_item_margin"
    android:layout_marginEnd="@dimen/chat_item_margin"
    android:layout_marginTop="4dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right|bottom"
        style="@style/ChatItemDate"/>

    <com.example.chat.view.SquareImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:maxWidth="@dimen/chat_item_image_height"
        android:src="@drawable/placeholder"/>

</LinearLayout>